<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:function</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <mainType>
                        <TCEforms>
                            <label>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:select.mainType</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1">0</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </mainType>
                    <normalVariation>
                        <TCEforms>
                            <label>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:listing.normalStyles</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <itemsProcFunc>NITSAN\NsTimeline\Backend\ItemsProcFunc->getNormalStylesList</itemsProcFunc>
                                <size>0</size>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                                <eval>required</eval>
                            </config>
                        </TCEforms>
                    </normalVariation>
                    <dateOpposite>
                        <TCEforms type="array">
                            <label>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:date.opposite</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </dateOpposite>
                    <section>
                        <section>1</section>
                        <title>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:multiple.element</title>
                        <type>array</type>
                        <el>
                            <container>
                                <title>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:general.fields</title>
                                <displayCond>FIELD:sDEF.mainType:!=:2</displayCond>
                                <type>array</type>
                                <el>
                                    <title>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:general.title</label>
                                            <config>
                                                <type>input</type>
                                                <size>30</size>
                                                <eval>trim,required</eval>
                                            </config>
                                        </TCEforms>
                                    </title>
                                    <text>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:general.text</label>
                                            <config>
                                                <type>text</type>
                                                <rows>8</rows>
                                                <cols>30</cols>
                                                <eval>trim</eval>
                                                <enableRichtext>1</enableRichtext>
                                                <richtextConfiguration>default</richtextConfiguration>
                                            </config>
                                        </TCEforms>
                                    </text>
                                    <link>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:general.link</label>
                                            <config>
                                                <type>input</type>
                                                <renderType>inputLink</renderType>
                                                <size>30</size>
                                                <eval>trim</eval>
                                                <softref>typolink,typolink_tag,images,url</softref>
                                                <fieldControl>
                                                    <linkPopup>
                                                        <options>
                                                            <!--<blindLinkOptions>file,mail,page,spec,url</blindLinkOptions>-->
                                                            <!--<blindLinkFields>class,params,target,title</blindLinkFields>-->
                                                        </options>
                                                    </linkPopup>
                                                </fieldControl>
                                            </config>
                                        </TCEforms>
                                    </link>
                                    <date>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:select.date</label>
                                            <config>
                                                <type>input</type>
                                                <renderType>inputDateTime</renderType>
                                                <size>20</size>
                                                <eval>date</eval>
                                            </config>
                                        </TCEforms>
                                    </date>
                                    <customIcon>
                                        <TCEforms>
                                            <label>LLL:EXT:ns_timeline/Resources/Private/Language/locallang_flex.xlf:timeline.icon</label>
                                            <displayCond>FIELD:normalVariation:!=:style-2</displayCond>
                                            <config>
                                                <type>select</type>
                                                <itemsProcFunc>NITSAN\NsTimeline\Backend\ItemsProcFunc->getIconsList</itemsProcFunc>
                                                <renderType>selectSingle</renderType>
                                                <size>0</size>
                                                <minitems>1</minitems>
                                                <maxitems>1</maxitems>
                                            </config>
                                        </TCEforms>
                                    </customIcon>
                                </el>
                            </container>
                        </el>
                    </section>
                </el>
            </ROOT>
        </sDEF>
  </sheets>
</T3DataStructure>